<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:columnCount="3"
    android:contentDescription="Image"
    android:orientation="horizontal"
    tools:context=".SettingActivity"
    tools:ignore="MergeRootFrame" >

    <Button
        android:id="@+id/button1"
        style="?android:attr/buttonStyleSmall"
        android:layout_gravity="left"
        android:onClick="selectimage"
        android:text="@string/select_img" />

    <Space
        android:layout_column="1"
        android:layout_gravity="fill_vertical"
        android:layout_row="8" />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="match_parent"
        android:layout_height="408dp"
        android:layout_column="0"
        android:layout_gravity="left|top"
        android:layout_row="1"
        android:background="@drawable/background_holo_dark"
        android:contentDescription="Image Notif"
        android:scaleType="fitCenter"
        android:src="@drawable/listen_tr" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="189dp"
        android:layout_column="0"
        android:layout_gravity="center_horizontal|top"
        android:layout_row="2"
        android:ems="10"
        android:enabled="false"
        android:inputType="textEmailAddress"
        android:text="ernestdev@gmail.com"
        android:textAlignment="center"
        android:textSize="12sp" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="match_parent"
        android:layout_column="0"
        android:layout_gravity="left|bottom"
        android:layout_row="8"
        android:layout_rowSpan="3"
        android:text="Click back to quit"
        android:textAppearance="?android:attr/textAppearanceMedium" />

    <Button
        android:id="@+id/button2"
        android:layout_column="0"
        android:layout_gravity="right|top"
        android:layout_row="0"
        android:onClick="save_image"
        android:text="@string/str_apply" />

</GridLayout>